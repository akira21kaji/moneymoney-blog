---
import Ranking from '../components/Ranking.astro';
import Topix from '../components/Topix.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="投資学習ブログ｜ホームページ">
	<main>
		<div class="container">
			<Topix />
			<Ranking />
		</div>
	</main>
</Layout>

<style>
	main {
		margin-top: 80px;
		margin-left: 180px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		height: 100vh;
	}
	.container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		height: calc(100vh - 80px);
		width: 80%;
		gap: 1rem;
	}
</style>