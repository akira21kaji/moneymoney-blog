---
import { getBlogs } from "../lib/microms";
const response = await getBlogs({ fields: ["id", "title"]})
---
<div class="topix">
  <h2>トピックス</h2>
  <ul>
    {
      response.contents.map((content: any) => (
        <li>
          <a href={content.id}>{content.title}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .topix {
    height: 100%;
    width: 100%;
    padding: 1rem;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
  }
</style>
